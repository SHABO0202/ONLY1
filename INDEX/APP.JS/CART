<script>
const cart = JSON.parse(localStorage.getItem("cart")) || [];
const container = document.getElementById("cart-items");
cart.forEach(item => {
const div = document.createElement("div");
div.textContent = item.name + " - $" + item.price;
container.appendChild(div);
});
</script>
